<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/LightSlateGray</item>
        <item name="colorPrimaryDark">@color/Teal</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="MyCustomToolBarTheme" parent="ThemeOverlay.AppCompat.Light" >
        <item name="android:textColorPrimary">@color/RoyalBlue</item>
        <item name="android:textColorSecondary">@color/RoyalBlue</item>
    </style>

</resources>
